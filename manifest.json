{
	"manifest_version": 2,
	"name": "My Klout Score",
	"description": "Displays your Klout Score",
	"version": "0.1",
	"permissions": [ "http://api.klout.com/", "storage"],
	"browser_action" : {
		"default_icon": {
			"19": "images/klout-score-flag_19x19.png"
		},
		"default_title": "My Klout score",
		"default_popup": "index.html"
	},
	"options_page": "options.html"
}